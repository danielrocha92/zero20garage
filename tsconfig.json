{
  "compilerOptions": {
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "disableSourceOfProjectReferenceRedirect": false,
    "disableSolutionSearching": false,
    "disableReferencedProjectLoad": false,

    "target": "es6",
    // CORREÇÃO AQUI: Adicione as libs padrão para incluir os tipos globais
    // 'dom' para tipos do navegador (como document, window) se for um projeto web/React
    // 'es2022' ou 'esnext' para os tipos de funcionalidades JavaScript mais recentes
    "lib": ["dom", "es2022"], // Ou "esnext" dependendo da sua preferência

    "jsx": "react-jsx",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "jsxImportSource": "",
    "reactNamespace": "",
    "noLib": false,
    "useDefineForClassFields": false,
    "moduleDetection": "auto",

    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "rootDirs": [],
    "typeRoots": [],
    "types": [],
    "allowUmdGlobalAccess": false,
    "moduleSuffixes": [],
    "resolveJsonModule": true,
    "noResolve": false,

    "allowJs": false,
    "checkJs": false,
    "maxNodeModuleJsDepth": 1,

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "outDir": "dist",
    "removeComments": false,
    "noEmit": false,
    "importHelpers": false,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": false,
    "sourceRoot": "",
    "mapRoot": "",
    "inlineSourceMap": false,
    "inlineSources": false,
    "emitBOM": false,
    "newLine": "crlf",
    "stripInternal": false,
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "preserveConstEnums": false,
    "declarationDir": "types",
    "preserveValueImports": false,

    "isolatedModules": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "preserveSymlinks": false,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "skipDefaultLibCheck": false,
    "skipLibCheck": true
  },
  // Opcional: Se você usa pastas específicas para incluir ou excluir
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}